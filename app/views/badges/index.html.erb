<h1>Listing badges</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2">Fa symbol</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @badges.each do |badge| %>
      <tr>
        <td><%= badge.name %></td>
        <td><%= badge.fa_symbol %></td>
        <td><span class='symbol' style='font-size: .2em;'><%= fa_icon badge.fa_symbol %></span></td>
        <td><%= link_to 'Show', badge %></td>
        <td><%= link_to 'Edit', edit_badge_path(badge) %></td>
        <td><%= link_to 'Destroy', badge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Badge', new_badge_path %>
